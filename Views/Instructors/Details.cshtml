}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LatestQualification)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LatestQualification)
        </dd>
        <dt class="col-sm-2">
